

<div class="container">
  <div class="row">
    <div id="login" class="offset-by-four columns six columns">
      <h1>Log in</h1>
      <div>
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Log in" %>
        <% end %>

        <p>Not Joan? <%= link_to "Home", root_path %></p>
      </div>
    </div>  
  </div>
</div>