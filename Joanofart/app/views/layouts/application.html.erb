<!DOCTYPE html>
<html>


<head>
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans|Tangerine|Julius+Sans+One|Belleza|Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
  <title>Joan E Haynsworth</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <div >
      <div class="row">
        <div class="four columns">
          <h4><%= link_to "Joan E Haynsworth", root_path%></h4>
        </div>
        <nav class="offset-by-three columns four columns" id="main-nav">
        	<% if logged_in? %>
          <ul>
          	<li><%= link_to "ARTWORK", projects_path %></li>
            <li><%= link_to "ABOUT", about_path %></li>
            <li><%= link_to "CONTACT", contact_path %></li>
          </ul>  
          <% else %>
          <ul>
            <li><%= link_to "ARTWORK", projects_path %></li>
            <li><%= link_to "ABOUT", about_path %></li>
            <li><%= link_to "CONTACT", contact_path %></li>
          </ul>	
        	<% end %>
        </nav>  
      </div>  
    </div>
  </header>

  <%= yield %>

  <footer>
    <div class="row">
      <div class="three columns">
        <% if logged_in? %>
        <ul>
          <li><%= link_to "LOG OUT", logout_path, method: :delete %></li>
        </ul>
        <% else %>
        <ul>
          <li><%= link_to "LOG IN", login_path %></li>
        </ul>
        <% end %> 
      </div>
    </div>
  </footer>

</body>
</html>
