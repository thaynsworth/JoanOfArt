<h1>New Project</h1>

<%= form_for @project do |f| %>
	
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label :type %><br>
      <%= f.text_field :type %>
    </div>
  <div class="field">
    <% if @project.avatar.exists? %>
      <%= avatar_tag @project.avatar.url %>
    <% end %>
    <%= f.label :avatar, "Attach an Image of your Project" %><br>
    <%= f.file_field :avatar %>
  </div>
  
  <input type='hidden' name='project[user_id]' value='<%= @current_user.id %>' />
 
  <div class="actions">
    <%= f.submit %>
  </div>	

<% end %>