<div class="container">	
	<div class="row">
		<div class="offset-by-one column" id="project-nav">
			<div class="two columns">Flowers</div>
			<div class="two columns" id="animal-button">Animals</div>
			<div class="two columns">Landscapes</div>
			<div class="two columns">Greeting Cards</div>
			<div class="two columns">Children's Books</div>
		</div>
	</div>
</div>

<div class="container" id="project-main">
	
</div>


<table class="container" id="projects">
  <thead class="row">
    <tr>
      <th>Animals</th>
    </tr>
  </thead>
  <tbody class="row">
  	<% @animals.in_groups_of(3, false).each do |animals| %>
			<tr class="offset-by-one eleven columns">	
				<% animals.each do |animal| %>	
			    <td>
			    	<%=link_to image_tag(animal.avatar.url(:thumb)), projects_path(@project) %>	
			    	<p><%= link_to animal.name, project_path(:id => animal.id) %><p>
			    </td> 
			  <% end %>   
			</tr>
		<% end %>
  </tbody>
</table>

