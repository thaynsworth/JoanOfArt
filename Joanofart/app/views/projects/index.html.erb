	<nav id="project-nav" class="row">
		<ul class="offset-by-one column">
			<li class="two columns" id="flower-button">Flowers</li>
			<li class="two columns" id="animal-button">Animals</li>
			<li class="two columns">Landscapes</li>
			<li class="two columns">Greeting Cards</li>
			<li class="two columns">Children's Books</li>
		</ul>
	</nav>


<div id="project-main" class="container">	

	<div class="row">
		<div class="project-load">
			<table>
			  <thead>
			    <tr>
			      <th>All Artwork</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @projects.in_groups_of(3, false).each do |animals| %>
						<tr>	
							<% animals.each do |animal| %>	
						    <td class="four columns">
						    	<%=link_to image_tag(animal.avatar.url(:thumb)), project_path(:id => animal.id) %>	
						    	<p><%= link_to animal.name, project_path(:id => animal.id) %><p>
						    	<p><%= animal.description %></p>
						    	<p><%= animal.price %></p>			
						    </td> 
						  <% end %>   
						</tr>
					<% end %>
			  </tbody>
			</table>
		</div>
	</div>

	<div class="row animals">
		<table>
		  <thead>
		    <tr>
		      <th>Animals</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @animals.in_groups_of(3, false).each do |animals| %>
					<tr>	
						<% animals.each do |animal| %>	
					    <td class="four columns">
					    	<%=link_to image_tag(animal.avatar.url(:thumb)), project_path(:id => animal.id) %>	
					    	<p><%= link_to animal.name, project_path(:id => animal.id) %><p>
					    	<p><%= animal.description %></p>
					    	<p><%= animal.price %></p>			
					    </td> 
					  <% end %>   
					</tr>
				<% end %>
		  </tbody>
		</table>
	</div>

	<div class="row flowers">
		<table>
		  <thead>
		    <tr>
		      <th>Flowers</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @flowers.in_groups_of(3, false).each do |flowers| %>
					<tr>	
						<% flowers.each do |flower| %>	
					    <td class="four columns">
					    	<%=link_to image_tag(flower.avatar.url(:thumb)), project_path(:id => flower.id) %>
					    	<div class="description">
					    	<p><%= link_to flower.name, project_path(:id => flower.id) %><p>
					    	<p><%= flower.description %></p>
					    	<p><%= flower.price %></p>
					    	</div>			
					    </td> 
					  <% end %>   
					</tr>
				<% end %>
		  </tbody>
		</table>
	</div>

</div>

<script>
	
$(function(){


	$("#flower-button").click(function(){
		emptyProjects();
		flowerProjects();
	});

	$("#animal-button").click(function(){
		emptyProjects();
		animalProjects();
	});

})

</script>

