<div class="container">	
	
	<div class="row">
		<div id="project-nav">
			<button class="two columns" id="flower-button">Flowers</button>
			<button class="two columns" id="animal-button">Animals</button>
			<button class="two columns">Landscapes</button>
			<button class="two columns">Greeting Cards</button>
			<button class="two columns">Children's Books</button>
		</div>
	</div>


	<div class="row">

		<div class="project-main">
			<h1>This will be a photo slideshow</h1>
				<div>
					<%= image_tag @projects.avatar.url(:large) %>
				</div>
		</div>

	</div>

	<div class="row animals">
		<table>
		  <thead>
		    <tr>
		      <th>Animals</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @animals.in_groups_of(3, false).each do |animals| %>
					<tr>	
						<% animals.each do |animal| %>	
					    <td class="four columns">
					    	<%=link_to image_tag(animal.avatar.url(:thumb)), project_path(:id => animal.id) %>	
					    	<p><%= link_to animal.name, project_path(:id => animal.id) %><p>
					    	<p><%= animal.description %></p>
					    	<p><%= animal.price %></p>			
					    </td> 
					  <% end %>   
					</tr>
				<% end %>
		  </tbody>
		</table>
	</div>

	<div class="row flowers">
		<table>
		  <thead>
		    <tr>
		      <th>Flowers</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @flowers.in_groups_of(3, false).each do |flowers| %>
					<tr>	
						<% flowers.each do |flower| %>	
					    <td class="four columns">
					    	<%=link_to image_tag(flower.avatar.url(:thumb)), project_path(:id => flower.id) %>	
					    	<p><%= link_to flower.name, project_path(:id => flower.id) %><p>
					    	<p><%= flower.description %></p>
					    	<p><%= flower.price %></p>			
					    </td> 
					  <% end %>   
					</tr>
				<% end %>
		  </tbody>
		</table>
	</div>

</div>

<script>
	
$(function(){

	$("#animal-button").click(function(){
		emptyProjects();
		animalProjects();
	});

	$("#flower-button").click(function(){
		emptyProjects();
		flowerProjects();
	});

	$()

})

</script>

