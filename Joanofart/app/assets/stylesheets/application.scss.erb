#main-nav {
	text-align: center;
}

#main-nav a {
	color: white;
	transition:.2s;
	border-top: 1px solid white;
	border-bottom: 1px solid white;
	margin: 10px;

}

#main-nav li {
	display: inline-block;
	font-weight: bold;
	padding-top: 30px;
	font-size: 28px;
	font-weight: bold;
	color: white;
	/*color: white*/
	transition: 2s;
}

#main-nav a:visited {
	color: white;
}

#main-nav a:hover {
	background-color: white;
	color: black;
	// border-top: 1px solid black;
	// border-bottom: 1px solid black;
	opacity: .6;
}

