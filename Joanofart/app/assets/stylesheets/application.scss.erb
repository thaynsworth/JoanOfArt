footer {
	background-color: lightgrey;
	height: 100%;
	bottom: 0;
	left: 0;
	border-top: 1px solid black;
	padding-top: 20px;
}


footer ul {
	text-decoration: none;
	list-style-type: none;
}

footer li {
display: inline-block;	
}

footer a {
	padding: 5px;
	color: black;
	transition: .2s;
}

footer a:visited {
	color: black;
}

